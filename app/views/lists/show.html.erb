<h1><%= @list.name %></h1>

<h2>Bookmarks</h2>
<% if @list.bookmarks.any? %>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <%= bookmark.comment %> - <%= bookmark.movie.title %>
        <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this bookmark?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No bookmarks yet.</p>
<% end %>

<%= link_to 'Add Bookmark', new_list_bookmark_path(@list) %>
<br>
<%= link_to 'Back to Lists', lists_path %>
