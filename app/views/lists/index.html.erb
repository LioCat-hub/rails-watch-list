<h1>All Lists</h1>

<%= link_to 'Create a new list', new_list_path, class: 'btn btn-success' %>

<ul>
  <% @lists.each do |list| %>
    <li>
      <%= link_to list.name, list_path(list) %>
      <%= link_to 'Delete', list_path(list), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
    </li>
  <% end %>
</ul>
